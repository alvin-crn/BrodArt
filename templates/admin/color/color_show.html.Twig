{% extends 'admin/base.html.twig' %}

{% block title %}Modifier couleur{% endblock %}

{% block css %}
<link rel="stylesheet" href="{{ asset('css/admin/show-entity.css') }}">
{% endblock %}

{% block admin_content %}
<div class="entity-show">

  <h1>Modifier la couleur</h1>

  {% for message in app.flashes('success') %}
  <div class="alert alert-success">
    {{ message }}
  </div>
  {% endfor %}

  <div class="form-card">
    {{ form_start(form) }}

    <div class="form-group">
      {{ form_label(form.name) }}
      {{ form_widget(form.name) }}
      {{ form_errors(form.name) }}
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <span class="text">Enregistrer</span>
      </button>

      <a href="{{ path('admin_colors') }}" class="btn btn-secondary">
        Retour
      </a>
    </div>

    {{ form_end(form) }}
  </div>

</div>
{% endblock %}