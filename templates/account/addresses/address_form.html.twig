<div class="right-container formaddress">
    <h1>
        {% if metaTitle == "Ajouter une adresse" %}
        Ajouter une adresse
        {% elseif metaTitle == "Modifier une adresse" %}
        Modifier une adresse
        {% endif %}
    </h1>
    {{ form_start(form) }}
    <div class="div1">{{ form_row(form.name) }}</div>
    <div class="div2">{{ form_row(form.firstname) }}</div>
    <div class="div3">{{ form_row(form.lastname) }}</div>
    <div class="div4">{{ form_row(form.compagny) }}</div>
    <div class="div5">{{ form_row(form.address) }}</div>
    <div class="div6">{{ form_row(form.postal) }}</div>
    <div class="div7">{{ form_row(form.city) }}</div>
    <div class="div8">{{ form_row(form.country) }}</div>
    <div class="div9">{{ form_row(form.phone) }}</div>
    <div class="div10">
        <button type="submit">
            <span>
                {% if metaTitle == "Ajouter une adresse" %}
                Ajouter
                {% elseif metaTitle == "Modifier une adresse" %}
                Modifier
                {% endif %}
            </span>
        </button>
    </div>
    {{ form_end(form) }}
</div>