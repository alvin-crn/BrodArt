  <h1>Mes informations personnelles</h1>

  <div class="form">
    <div class="form-group">
      <label>Prénom :</label>
      <input type="text" placeholder="{{ app.user.firstname }}" disabled>
    </div>

    <div class="form-group">
      <label>Nom :</label>
      <input type="text" placeholder="{{ app.user.lastname }}" disabled>
